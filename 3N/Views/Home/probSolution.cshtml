
@{
    ViewBag.Title = "probSolution";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.angularjs.org/1.2.14/angular.js"></script>

<h2>probSolution</h2>

<div ng-app="problemModule">
    <div ng-controller="problemController">
        <div class="col-lg-12">
            <div class="col-lg-2">
                <label>Enter Two Integer</label>
            </div>
            <div class="col-lg-2">


                <input type="number" ng-model="input1" />

            </div>
            <div class="col-lg-2">
                <input type="number" ng-model="input2" />
            </div>
            <div class="col-lg-2">
                <button type="submit" ng-click="result(input1,input2)">Submit</button>
            </div>
            
        </div>
        <div class="col-lg-12">
            <div class="col-lg-4">
                <label class="label">Output</label>
                <h4>
                    {{input1}} {{input2}} {{result}}
                </h4>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var app = angular.module('problemModule', []);
    app.controller('problemController', function ($http, $scope) {

        $scope.result = (start, end) => {
            let requestBody = {
                "Input1": start,
                "Input2": end
            }
            $http.post('@Url.Action("Calculation", "Home")', requestBody, { headers: { 'Content-Type': 'application/json' } })
                .then(response => {
                    console.log(response.data);
                    
                        $scope.result = response.data;
                    
                })

        }
    })

</script>

